@model UOBEVENT_Code_first_2.Models.Event

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";

}



<div class="container">
    <h1 class="text-UoBPurple font1"> @Html.DisplayFor(modelItem => Model.EventName)</h1>


    <div>
        <h4 class="font2 ">   @Html.DisplayFor(model => model.EventDate) - @Html.DisplayFor(model => model.EventTime) - @Html.DisplayFor(model => model.EventLocation): @Html.DisplayFor(model => model.EventRoom) </h4>


    </div>

    <hr />

    <div class="container ">

        <div class="col-md-8 ">
            <div class="table-bordered border-UoBPurple  img-rounded ">
                <h3 class="text-UoBPurple font1 ">Event Description</h3>
                <p class="font2"> @Html.DisplayFor(model => model.EventDescription)</p>
            </div>
        </div>

        <div class="col-md-4 ">
            <div class="table-bordered border-UoBPurple  img-rounded ">
                <h4 class="text-UoBPurple font1">Event Category</h4>
                <p class="font2"> @Html.DisplayFor(model => model.EventCategory)</p>

                <h4 class="text-UoBPurple font1">Event Created</h4>
                <p class="font2"> @Html.DisplayFor(model => model.CreationDT)</p>

                <h4 class="text-UoBPurple font1">Created by</h4>
                <p class="font2"> @Html.DisplayFor(model => model.EventUserID)</p>

                <button type="button" class="btn btn-outline-UoBPurple ">
                    @Html.ActionLink("View Guest List", "GuestsPV", new { id = Model.EventID })
                </button>

                <hr />
                <a href="https://twitter.com/share?ref_src=twsrc%5Etfw" class="twitter-share-button" data-size="large" data-text="Come check out this event at the University of Brighton!" data-show-count="false">Tweet</a>
                <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>

            </div>
        </div>
    </div>
</div>
