 <!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title </title>
    @Scripts.Render("~/bundles/jquery")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    



    <link href="https://fonts.googleapis.com/css?family=Cabin|Raleway&display=swap" rel="stylesheet">



</head>
<body>
    <div class="navbar navbar-default  navbar-fixed-top bg-Swhite border-UoBPurple  ">
        <div class="container">
            <div class="navbar-header ">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("UoB Event Hub", "Index", "Home", new { area = "" }, new { @class = "navbar-brand text-UoBPurple font1   " })
            </div>
            <div class="navbar-collapse collapse text-UoBPurple ">
                <ul class="nav navbar-nav text-UoBPurple  ">

                    <li class="text-UoBPurple">@Html.ActionLink("Home", "Index", "Home", new { }, new { @class = "text-UoBPurple font2" }) </li>


                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-UoBPurple " href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Events
                        </a>
                        <div class="dropdown-menu bg-" aria-labelledby="navbarDropdown">
                            @*@Html.ActionLink("Events", "Index", "Events")*@
                            <a class="dropdown-item" href="#">@Html.ActionLink("Events List", "Index", "Events", new { }, new { @class = "text-UoBPurple font2" })</a>
                            <div class="dropdown-divider"></div>


                        </div>
                    </li>





                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-UoBPurple" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Your Events
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item text-UoBPurple" href="#">  @Html.ActionLink("Created Events", "Index", "MyEvents", new { }, new { @class = "text-UoBPurple font2" })</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item text-UoBPurple" href="#">  @Html.ActionLink("Joined Events", "Index", "Attendings", new { }, new { @class = "text-UoBPurple font2" })</a>



                        </div>
                    </li>




                    
                    <li>@Html.ActionLink("Legal and Contact", "Contact", "Home", new { }, new { @class = "text-UoBPurple font2" })</li>
                </ul>

                @Html.Partial("_LoginPartial")




            </div>
        </div>
    </div>






    <div class=" body-content">
        @RenderBody()
        <hr />





        <footer>
            <p>&copy; @DateTime.Now.Year - UoB Event Hub</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
 
    @RenderSection("scripts", required: false)
</body>
</html>
